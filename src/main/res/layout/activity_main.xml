<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffbbcc19"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="410dp"
        android:layout_height="34dp"

        android:text="What is the capital of India" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t1"
        android:hint="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="34dp"


        android:text="Who is the President of India" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t2"
        android:hint="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="408dp"
        android:layout_height="37dp"
        android:text="Who is the Prime Minister of India?" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/t3"
        android:hint="" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the most followed sport in the country?"/>

    <EditText
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who is the father of the nation?"/>

    <EditText
        android:id="@+id/t5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the name of the Indian currency?"/>

    <EditText
        android:id="@+id/t6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonAlert"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Submit" />


</LinearLayout>